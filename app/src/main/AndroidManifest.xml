<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dobrowol.styloweplywanie">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />


    <application
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity android:name=".MainActivity">

        </activity>
        <activity android:name=".welcome.InitialWelcome">

            <!-- The meta-data tag is required if you support API level 15 and lower -->

        </activity>
        <activity android:name=".welcome.CreateTeamActivity"
            android:parentActivityName=".welcome.InitialWelcome" >
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".welcome.InitialWelcome" />

        </activity>
        <service android:name=".StudentInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".StudentMessageHandler">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".teammanagement.TeamActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".welcome.CreateTeamActivity" />
        </activity>
        <activity android:name=".welcome.JoinTeamActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".teammanagement.TeamDetailsActivity">

        </activity>
        <activity android:name=".teammanagement.StudentsActivity">


        </activity>
        <activity android:name=".teammanagement.TrainingManager">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".welcome.JoinTeamActivity"/>
        </activity>
        <activity android:name=".teammanagement.trainingdetails.StudentAchievementChartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".teammanagement.StudentsActivity"/>
        </activity>
        <activity android:name=".teammanagement.AddStudentActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".teammanagement.StudentsActivity" />

        </activity>
        <activity android:name=".teammanagement.AddTrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".teammanagement.TeamDetailsActivity"/>
        </activity>
        <activity android:name=".teammanagement.AddTrainingDetails">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".teammanagement.AddTrainingActivity"/>
        </activity>
        <activity android:name=".utils.StudentAchievementActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".teammanagement.StudentsActivity"/>
        </activity>

    </application>

</manifest>